version: '3'
services:
  database:
    image : 'mongo'
    container_name: 'rpmongo'   #container name
    environment:
      - MONGO_INITDB_DATABASE=rptest #database name
      - MONGO_INITDB_ROOT_USERNAME=rpuser
      - MONGO_INITDB_ROOT_PASSWORD=rppass
    volumes:
      - ./create-user.sh:/docker-entrypoint-initdb.d/create-user.sh:ro
      - ./mongo-volume:/data/db
    ports:
      - 27017-27017:27017-27017
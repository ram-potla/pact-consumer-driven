  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "cucumber",
      "skipFiles": ["<node_internals>/**"],
      // "program": "${workspaceFolder}/app.js"
      "program": "${workspaceRoot}/e2e/node_modules/.bin/cucumber-js",
      "cwd": "${workspaceRoot}/e2e",
    }
  ]
